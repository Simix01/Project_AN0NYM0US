<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    android:layout_marginHorizontal="5dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:orientation="vertical"
        android:background="@drawable/post_background"
        tools:context=".PostFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="6dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@color/black"
                    tools:src="@drawable/anonym_icon" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userCode"
                android:text="prova123456789"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oswald_semibold"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <HorizontalScrollView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:background="@drawable/textview_border">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/categoriaText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollHorizontally="true"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Categoria"
                    android:fontFamily="@font/oswald_semibold"
                    android:textSize="18dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"/>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="450dp"
                android:layout_marginHorizontal="2dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/postImageFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/black"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    tools:src="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/likeBtnFrag"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/like_button_base"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                </ImageButton>

                <TextView
                    android:id="@+id/upvoteCounter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:fontFamily="@font/oswald_regular"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/dislikeBtnFrag"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dislike_button_base"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                </ImageButton>

                <TextView
                    android:id="@+id/downvoteCounter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="center"
                    android:fontFamily="@font/oswald_regular"
                    android:textColor="@color/white">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/commentsBtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/comments_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="2">

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/shareBtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/share_button"
                    android:layout_marginTop="5dp">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/dataPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/oswald_regular">
            </TextView>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
